---
import "../../styles/global.css";
import Navbar from "../../components/Navbar.astro";
import { getLanguageFromUrl, useTranslation } from "../../languages/utils.js";
import Footer from "../../components/Footer.astro";
const lang = getLanguageFromUrl(Astro.url);
const t = useTranslation(lang);
export const prerender = false;
---

<!doctype html>
<html lang={lang} itemscope itemtype="https://schema.org/WebPage">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="Maison de vacances à Majunga Mahajanga, Madagascar. Location saisonnière idéale pour familles et groupes." />
		<meta name="keywords" content="maison de vacances, Majunga, Mahajanga, Madagascar, Madagaskar, location saisonnière, famille, groupe" />
		<title>{t("title")} | Majunga Mahajanga Vacances</title>
		<meta property="og:title" content={t("title")} />
		<meta property="og:description" content="Maison de vacances à Majunga Mahajanga, Madagascar." />
		<meta property="og:type" content="website" />
		<meta property="og:locale" content={lang} />
		<link rel="icon" href="/favicon.ico" sizes="any">
    	<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    	<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    	<link rel="apple-touch-icon" href="/apple-touch-icon.png">
    	<link rel="manifest" href="/site.webmanifest">
		<meta name="robots" content="index, follow" />
		<link rel="robots" href="/robots.txt" />
		<link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml" />
	</head>
	<body>
		<Navbar />
		<main id="main-content" role="main" aria-label="Contenido principal">
			<section 
				class="bg-gradient-to-t from-blue-800 to-blue-400 text-white shadow-2xl"
				aria-label="Bienvenida"
				itemscope itemtype="https://schema.org/LodgingBusiness"
			>
				<meta itemprop="name" content="Maison de Vacances Majunga" />
				<meta itemprop="address" content="Majunga, Madagascar" />
				<meta itemprop="telephone" content="+261 341 551 268" />
				<div class="container mx-auto p-8">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
						<article class="flex flex-col justify-center h-full md:pr-12" itemprop="description">
							<header>
								<h1 class="font-semibold text-3xl mb-8" itemprop="name">
									{t("title")}
								</h1>
							</header>
							<p class="text-justify">{t("descriptionOne")}</p>
							<p class="mt-5 text-justify">{t("descriptionTwo")}</p>
							<p class="mt-5 text-justify font-semibold">
								<span itemprop="telephone">Tel: 0341 551 268</span>
							</p>
						</article>
						<article class="grid grid-cols-2 grid-rows-2 gap-3" aria-label="Galería de imágenes">
							<img
								src="/house/house_outside.jpg"
								alt="Vista exterior de la casa"
								title="Vista exterior"
								class="w-70 h-50 object-cover rounded-2xl transition-transform duration-200 hover:scale-105"
								itemprop="photo"
							/>
							<img
								src="/house/house_room_1bed.jpg"
								alt="Habitación con cama"
								title="Habitación"
								class="w-70 h-50 object-cover rounded-2xl transition-transform duration-200 hover:scale-105"
								itemprop="photo"
							/>
							<img
								src="/house/house_inside_1.jpg"
								alt="Interior de la casa"
								title="Interior"
								class="w-70 h-50 object-cover rounded-2xl transition-transform duration-200 hover:scale-105"
								itemprop="photo"
							/>
							<img
								src="/house/house_kitchen.jpg"
								alt="Cocina equipada"
								title="Cocina"
								class="w-70 h-50 object-cover rounded-2xl transition-transform duration-200 hover:scale-105"
								itemprop="photo"
							/>
						</article>
					</div>
				</div>
			</section>
			<section class="shadow-xl" aria-label="Ubicación">
				<div class="container mx-auto p-8">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
						<article class="flex flex-col justify-center h-full md:pr-12">
							<header>
								<h2 class="font-semibold text-3xl mb-8 text-blue-400">
									{t("titleUbication")}
								</h2>
							</header>
							<p class="text-justify">{t("descriptionUbication")}</p>
						</article>
						<article class="grid grid-cols-1" aria-label="Mapa">
							<img
								src="/house/map-hotelDeVilleMaisonDeVacances.jpg"
								alt="Mapa de ubicación de la casa"
								title="Mapa de ubicación"
								class="w-full h-100 object-cover object-bottom rounded-2xl"
								itemprop="hasMap"
							/>
						</article>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
